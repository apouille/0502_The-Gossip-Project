


<div class="jumbotron">
  <h4 class="display-4"> Voici les Gossips de la ville de <%= @cities.name%></h4>
</div>

	<div class="row mt-3">
	 <% @cities.users.each do |user| %>
	 <% user.gossips.each do |gossip| %>
		<div class="card mx-auto mb-5" style="width: 30rem;">
		  <div class="card-body">
		  <h5 class="card-title"><%= gossip.title %></h5>
		  <p class="card-text"><%= gossip.content %></p>
		  </div>
		</div>
	  <% end %>
	  <% end %>
</div>
